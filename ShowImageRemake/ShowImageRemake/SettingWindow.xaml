<windows:CustomWindow x:Class="ShowImageRemake.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowImageRemake"
        xmlns:windows="clr-namespace:ShowImageRemake.Windows"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800"
                      
                      Style="{StaticResource WindowStyle}">
    <StackPanel>

        <StackPanel Orientation="Horizontal" >
            <TextBlock>上下滾動條滾動:</TextBlock>
            <ComboBox x:Name="comboBox_VerticallyScroll">

            </ComboBox>
            <TextBlock>+中鍵滾輪</TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" >
            <TextBlock>左右滾動條滾動:</TextBlock>
            <ComboBox x:Name="comboBox_HorizontallyScroll">

            </ComboBox>
            <TextBlock>+中鍵滾輪</TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock>縮放:</TextBlock>
            <ComboBox x:Name="comboBox_Zoom">
            </ComboBox>
            <TextBlock>+中鍵滾輪</TextBlock>
        </StackPanel>

    </StackPanel>
</windows:CustomWindow>
